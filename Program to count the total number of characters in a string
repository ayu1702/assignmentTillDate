public class Main{
    public static void main(String ar[]){
        
        String str="The best of both worlds";
        str=str.toLowerCase();
        int totalChars=0;
        for(int i=0;i<str.length();i++){
            if(str.charAt(i)>='a'&& str.charAt(i)<='z'){
                totalChars=totalChars+1;
            }
        }System.out.println("total Characters = "+totalChars);
        
    }
}
